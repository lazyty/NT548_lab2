# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

aws_region = "us-east-1"
vpc_cidr = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"
availability_zone = "us-east-1a"

# IMPORTANT: Change this to your actual IP address for security
# Get your IP: curl ifconfig.me
allowed_ssh_ip = "0.0.0.0/0"

# Create this key pair in AWS EC2 console first
# Or use: aws ec2 create-key-pair --key-name nt548-keypair
key_pair_name = "nt548-keypair"

common_tags = {
  Project     = "NT548-BaiTapThucHanh-01"
  Environment = "dev"
  Owner       = "your-name"
}